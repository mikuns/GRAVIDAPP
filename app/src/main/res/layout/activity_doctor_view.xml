<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo.doctor.DoctorViewActivity"
    android:id="@+id/docScrollView">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOCTOR'S PORTAL"
        android:id="@+id/textView5"
        android:padding="5sp"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#6c2020"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="15sp"
        android:background="#000000" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_doctor"
        android:layout_gravity="center_horizontal" />
    <Button
        android:id="@+id/doc_pview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2b4d2c"
        android:gravity="center"
        android:padding="5dp"
        android:text="View Patient Previous Diagnosis"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/doc_NewDiag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2b4d2c"
        android:gravity="center"
        android:padding="5dp"
        android:text="Enter New Diagnosis"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/doc_NewP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2b4d2c"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add New Patient"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/doc_AllP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2b4d2c"
        android:gravity="center"
        android:padding="5dp"
        android:text="View All Patient Information"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/doc_NewD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2b4d2c"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add New Doctor"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/doc_Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2b4d2c"
        android:gravity="center"
        android:padding="5dp"
        android:text="Logout"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>
</ScrollView>
